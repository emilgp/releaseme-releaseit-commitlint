{
    "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
    "git": {
        "commit": true,
        "tagName": "${npm.name}@${version}",
        "requireCleanWorkingDir": false
    },
    "github": {
      "release": false,
      "releaseName": "${name} ${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {}
          ]
        }
      }
    }
}
